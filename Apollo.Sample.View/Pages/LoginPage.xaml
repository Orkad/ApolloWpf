<Page x:Class="Apollo.Sample.View.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:b="clr-namespace:Apollo.WPF.Behaviors;assembly=Apollo.WPF"
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding Path=Login, Source={StaticResource ViewModelLocator}}"
      Title="LoginPage">

    <Border BorderThickness="5" Width="250" Margin="30" Height="210" BorderBrush="{StaticResource RedColorBrush}">
        <StackPanel b:MarginSetter.Margin="5,3">
            <Label>Utilisateur :</Label>
            <TextBox Text="{Binding Username}" />
            <Label>Mot de passe :</Label>
            <PasswordBox b:PasswordBoxBehavior.BindPassword="True" b:PasswordBoxBehavior.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button Command="{Binding LoginCommand}" Style="{StaticResource AccentedSquareButtonStyle}" IsDefault="True">Connexion</Button>
            <Button Command="{Binding NavigateCommand}" CommandParameter="REGISTERPAGE" Style="{StaticResource AccentedSquareButtonStyle}">Inscription</Button>
        </StackPanel>
    </Border>
</Page>