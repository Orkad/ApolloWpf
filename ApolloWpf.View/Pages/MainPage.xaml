<Page x:Class="ApolloWpf.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ApolloWpf.View.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding Path=Main, Source={StaticResource ViewModelLocator}}"
      Title="MainPage">

    <Grid>
        <Label>Main Page</Label>
        <Button Command="{Binding ShowVersionCommand}" Style="{StaticResource SquareButtonStyle}" Margin="0,0,10,10" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="150">afficher la version</Button>
        <Button Command="{Binding NavigateCommand}" CommandParameter="login" Style="{StaticResource SquareButtonStyle}" Margin="0,0,165,10" Content="page de connexion" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="150" />
    </Grid>
</Page>