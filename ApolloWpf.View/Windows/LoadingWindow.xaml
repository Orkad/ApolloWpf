<Window x:Class="ApolloWpf.View.Windows.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApolloWpf.View"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="80" Width="230" WindowStyle="None"
        Background="White"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Image x:Name="image" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" Width="208"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   Source="/Resources/Images/apollo-logo.png" />

            <controls:ProgressRing x:Name="ProgressBar"
                                   Foreground="Black"
                                    Margin="6,3,167,0" VerticalAlignment="Top" Width="55" Height="58" RenderTransformOrigin="0.294,0.647" />
            <Label x:Name="LoadingLabel" Margin="66,50,0,0" VerticalAlignment="Top" Height="28">Chargement en cours</Label>
        </Grid>
    </Border>
</Window>